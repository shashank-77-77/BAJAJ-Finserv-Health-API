        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"Demo\",\n  \"lastName\": \"User\",\n  \"phoneNumber\": 9000000001,\n  \"emailId\": \"demo.user1@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/automation-campus/disabled/create/user",
